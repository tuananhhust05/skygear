{
  "watch": [
    "routes",
    "models",
    "middleware",
    "server.js"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/**",
    "uploads/**",
    "*.log",
    ".git/**",
    ".env"
  ],
  "exec": "node server.js",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 500,
  "verbose": true,
  "legacyWatch": true,
  "polling": true
}

